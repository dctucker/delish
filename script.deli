#!/usr/bin/deli

$found = run find . -name "disk*" | grep "sdb"

arg -y --yes     |= false
arg -n           |= true
arg -v --verbose |= false
arg --default
arg    --help    |= """
some documentation
"""
#arg $filename
env $GAS |= "diesel"
$GAS = "propane"

func = {
  local $message
  $message = "hello"
  out $message
}

if --yes {
  $var = "x"
  func "func called"
  if --verbose {
    out "Done."
    err "No errors"
  }
}

