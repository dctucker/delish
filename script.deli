#!/usr/bin/deli

arg -y --yes     |= false
arg -n           |= true
arg -v --verbose |= false
arg --default
arg    --help    |= """
some documentation
"""
arg $mustard

#unrecognized $statement

#arg $filename
env $SANDO |= "chicken parm"
out $SANDO
$SANDO = "meatball"
out $SANDO

out $mustard

$found = run find . -name "disk*" | grep "sdb"

$obj = [
  "a": "b"
  func: {
    out "obj func"
  }
]

#assert = {
