ls = {
  local $pwd = Path.pwd
  for $f in $pwd.list {
    $stat = $f.stat
    local $mode = $stat.mode
    local $modes = ['-','-','-','-','-','-','-','-','-','-']
    if ( $mode and 040000 ) != 0 {
      $modes.0 = "d"
    }
    $curmode = 0400
    $modechar = [ 'r', 'w', 'x' ]
    $seq = Array.seq 1 9
    for $i in $seq {
      if ( $mode and $curmode ) != 0 {
        $j = ( ( $i - 1 ) % 3 )
        $modes.$i = $modechar.$j
      }
      $curmode = ( $curmode shr 1 )
    }
    out $modes.join, " ", $f
    #.stat.mode.oct, " ", $f
  }
}
ls
